<%- include('partials/head',{}) %>

<div id="messages">

</div>
<div class="container addverbcontainer">
	<h1>Add Present tense verbs</h1>

	<input type="text" name="password" id="password" class="form-control" placeholder="Password">

	<form class="form-horizontal addverb" action="/addverb" method="post">
		<div class="form-group">
			<label class="control-label col-sm-2" for="infinitive">Infinitive</label>
			<div class="col-sm-10"><input class="form-control" type="text" name="infinitive" id="infinitive" placeholder="Infinitive"></div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="conj_je">Je</label>
			<div class="col-sm-10"><input class="form-control" type="text" name="conj_je" id="conj_je"></div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="conj_tu">Tu</label>
			<div class="col-sm-10"><input class="form-control" type="text" name="conj_tu" id="conj_tu"></div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="conj_ilelleon">Il/Elle/On</label>
			<div class="col-sm-10"><input class="form-control" type="text" name="conj_ilelleon" id="conj_ilelleon"></div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="conj_nous">Nous</label>
			<div class="col-sm-10"><input class="form-control" type="text" name="conj_nous" id="conj_nous"></div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="conj_vous">Vous</label>
			<div class="col-sm-10"><input class="form-control" type="text" name="conj_vous" id="conj_vous"></div>
		</div>
		<div class="form-group">
			<label class="control-label col-sm-2" for="conj_ilselles">Ils/Elles</label>
			<div class="col-sm-10"><input class="form-control" type="text" name="conj_ilselles" id="conj_ilselles"></div>
		</div>

		<button id="btn-add-verb" class="btn btn-primary">Add Verb</button>
		<div id="message"></div>
	</form>
</div>

<%- include('partials/footer',{}) %>